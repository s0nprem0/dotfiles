#
# wm independent hotkeys
#

# -- Modifier Keys ---
super = super
alt = alt
ctrl = control
shift = shift

# Terminal Emulator
super + Return
    kitty

# Program Launcher
super + @space
    rofi -show drun

# Reload sxhkd configuration
super + Escape
    pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# Quit/Restart bspwm
super + alt + {q,r}
    bspc {quit,wm -r}

# Close and Kill Node
super + {_,shift + } + w
    bspc node -{c,k}

# Toggle Monocle Layout
super + m
    bspc desktop -l next

# Send newest marked node to newest preselected node
super + y
    bspc node newest.marked.local -n newest.!automatic.local

# Swap current node with biggest window
super + g
    bspc node -s biggest.window

# Toggle floating window
super + f
    bspc node -t ~floating

#
# Window State and Flags
#

# Set Window State (tiled, pseudo_tiled, floating, fullscreen)
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set Node Flags (marked, locked, sticky, private)
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#
# Focus and Swap
#

# Focus Node in Direction (west, south, north, east)
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# Swap Node in Direction (west, south, north, east)
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# Focus Node by Path Jump (parent, brother, first, second)
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# Focus Next/Previous Window in Current Desktop
super + {bracketleft,bracketright}
    bspc node -f {prev,next}.local.!hidden.window

# Focus Next/Previous Desktop in Current Monitor
super + {_,shift + }c
    bspc desktop -f {prev,next}.local # Changed hotkeys for clarity

# Focus Last Node/Desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# Focus Older or Newer Node in Focus History
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# Focus or Send to Desktop (1-10)
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# Preselect
#

# Preselect Direction (west, south, north, east)
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# Preselect Ratio (0.1 - 0.9)
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# Cancel Preselection for Focused Node
super + ctrl + space
    bspc node -p cancel

# Cancel Preselection for Focused Desktop (all nodes)
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# Move/Resize
#

# Expand Window (outward)
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract Window (inward)
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Move Floating Window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}


# CheatSheet
super + /
  ~/.config/bspwm/scripts/KeyBindingsHelp

#
# Volume Control (Multimedia Keys)
#
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay
    playerctl play-pause


# Launch Flameshot GUI for interactive screenshot
Print
    flameshot gui

# Take full screen screenshot, copy to clipboard, and save to Pictures folder
# The `date` command creates a unique timestamped filename
super + Print
    flameshot full -c -p ~/Pictures/screenshot_$(date +%Y-%m-%d_%H-%M-%S).png

# Take full screen screenshot and copy to clipboard only (no file saved)
ctrl + Print
    flameshot full -c

# Brighness control
XF86MonBrightnessUp
    brightnessctl set +5%
XF86MonBrightnessDown
    brightnessctl set 5%-