{  
  "hyprland/workspaces": {
    "all-outputs": false,
    "warp-on-scroll": true,
    "format": "{name}",
    "persistent-only": false,
    "active-only": false,
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": []
    }
  },

  "custom/swaync": {
    "tooltip": true,
    "format": " {} {icon} ",
    "format-icons": {
      "notification": "[N]<span foreground='red'><sup>+</sup></span>",
      "none": "[N]",
      "dnd-notification": "[DND]<span foreground='red'><sup>+</sup></span>",
      "dnd-none": "[DND]",
      "inhibited-notification": "[I]<span foreground='red'><sup>+</sup></span>",
      "inhibited-none": "[I]",
      "dnd-inhibited-notification":
        "[DND-I]<span foreground='red'><sup>+</sup></span>",
      "dnd-inhibited-none": "[DND-I]"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  
  "hyprland/window": {
    "format": "{}",
    "rewrite": {
      "": "Desktop",
    },
    "max-length": 60,
    "ellipsize": true,
    "separate-outputs": false,
    "icon-size": 0
  },

  "wlr/taskbar": {
    "format": " {icon} ",
    "on-click": "activate",
    "on-click-middle": "close",

    "ignore-list": [
      "~",
      "Discord Updater"
    ],

    "tooltip-format": "{title}"
  },

  "tray": {
    "spacing": 4,
    "icon-size": 16
  },
  
  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip-format": "<big>{:%Y-%m-%d %H:%M:%S}</big>",
    "interval": 1,
  },
  
"pulseaudio": {
  "format": "{icon}  {volume}%",
  "format-muted": "Û∞ùü  muted",
  "format-bluetooth": "Û∞ÇØ {volume}%",
  "format-bluetooth-muted": "Û∞ÇØ Û∞ùü",
  "format-icons": {
    "headphone": "Û∞ãã",
    "hands-free": "Û∞ãé",
    "headset": "Û∞ãé",
    "phone": "Û∞è≤",
    "portable": "Û∞è≤",
    "car": "Û∞Ñã",
    "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
  },
  "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
  "on-click-right": "pavucontrol",
  "on-click-middle": "pactl set-default-sink $(pactl list short sinks | awk '{print $2}' | fzf)",
  "scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5% && pactl play-sample audio-volume-change",
  "scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5% && pactl play-sample audio-volume-change",
  "smooth-scrolling-threshold": 0.5,
  "tooltip": true,
  "tooltip-format": "{desc} ({format_source})",
  "ignored-sinks": ["Easy Effects Sink"]
  },

  "tray": {
    "icon-size": 10,
    "spacing": 10,
    "show-passive-items": false,
    "expand": false,
  }, 
  "battery": {
    "states": {
        "warning": 30,
        "critical": 15
    },

    "format": "{icon}  {capacity}%",
    "format-full": "{icon}  {capacity}%",
    "format-charging": "Ôóß  {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "format-alt": "{time}  {icon}",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
  },
  
  "network": {
    "interface-wifi": "wlan0", // Your Wi-Fi interface (e.g., wlan0, wlp3s0)
    "interface-ethernet": "eth0", // Your Ethernet interface (e.g., eth0, enp0s31f6)
    "interval": 5,
    "format-wifi":"{icon}  {essid} ({signalStrength}%)",
    "format-ethernet": "Û∞àÄ {ifname}", // Ethernet: Cable icon + Interface name
    "format-disconnected": "Û∞§Ø  Disconnected", // When no Wi-Fi or Ethernet connection
    "format-disabled": "Û∞ñ© Wi-Fi Off",    // When Wi-Fi radio is explicitly off
    "format-linked": "Û∞àÄ Wired (No IP)", // For wired, but no IP yet
    "format-vpn": "üîí VPN ({ifname})", // If NetworkManager's "network" module detects VPN
    "tooltip": true,
    "tooltip-format-wifi": "WiFi: {essid} ({signalStrength}%)\nIP: {ipaddr}/{cidr}\nUp: {bandwidthUpBytes} | Down: {bandwidthDownBytes}",
    "tooltip-format-ethernet": "Ethernet: {ifname}\nIP: {ipaddr}/{cidr}\nUp: {bandwidthUpBytes} | Down: {bandwidthDownBytes}",
    "tooltip-format-vpn": "VPN: {vpn_name} ({ipaddr})",
    "tooltip-format-disconnected": "No Network Connection",
    "tooltip-format-disabled": "Wi-Fi Disabled",
    "format-icons": {
        "wifi": [
            "Û∞§Ø", // 0-20%
            "Û∞§ü", // 20-40%
            "Û∞§¢", // 40-60%
            "Û∞§•", // 60-80%
            "Û∞§®"  // 80-100%
        ],
        "ethernet": "Û∞àÄ",
        "disconnected": "Û∞§Ø",
        "disabled": "Û∞ñ©",
        "vpn": "üîí" // VPN Lock icon (might not be used by "network" module's default format, but good to have)
    },
    "on-click": "networkmanager_dmenu",
  },
}
